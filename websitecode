            filteredVenues: [],
            init() {
                this.filteredVenues = this.venues;
            },
            filterVenues() {
                this.filteredVenues = this.venues.filter(venue => {
                    const costMatch = this.costFilter === 'all' || venue.admission === this.costFilter || (this.costFilter === 'Free' && venue.admission.toLowerCase().includes('free')) || (this.costFilter === 'Low Fee' && venue.admission.toLowerCase().includes('low fee')) || (this.costFilter === 'Admission Fee' && venue.admission.toLowerCase().includes('admission fee'));
                    const subjectMatch = this.subjectFilter === 'all' || venue.subjects.includes(this.subjectFilter);
                    return costMatch && subjectMatch;
                });
            }
        }
    }

